<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme_lol" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/Red</item>
        <item name="colorPrimaryDark">@color/Redder</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_floating_material_dark</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

</resources>
