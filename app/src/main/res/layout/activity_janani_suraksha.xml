<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ps1.bits_pilani.goa.aiims_kiosk.jananiSuraksha">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical" android:id="@+id/ScrollView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="previous scheme"
        android:id="@+id/button56"
        android:background="#eb6003"
        android:textColor="#ffffff"
        android:onClick="jsyp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button117" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="next schene"
        android:id="@+id/button71"
        android:background="#0954be"
        android:textColor="#ffffff"
        android:onClick="jsyn"
        android:layout_above="@+id/imageView75"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView75"
        android:layout_below="@+id/button56"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jananisurakshayojana"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Janani Suraksha Yojna"
        android:id="@+id/textView74"
        android:textColor="#000000"
        android:layout_below="@+id/button56"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Janani Suraksha Yojana (JSY) is an Indian Government scheme proposed by the Government of India. It was launched on 12 April 2005 by the Prime Minister of India.It aim to decrease the neo-natal and maternal deaths happening in the country by promoting institutional delivery of babies. This is a safe motherhood intervention under the National Rural Health Mission (NRHM).It is a 100% centrally sponsored scheme it integrates cash assistance with delivery and post-delivery care. The success of the scheme would be determined by the increase in institutional delivery among the poor families."
        android:id="@+id/textView75"
        android:textColor="#000000"
        android:layout_below="@+id/imageView75"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Features of this scheme"
        android:id="@+id/textView76"
        android:layout_below="@+id/textView75"
        android:layout_alignParentStart="true"
        android:textColor="#f80a0a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="In this scheme, the states where there is a low rate of Institutional deliveries is classified as Low Performing States (LPS) (the states of Uttar Pradesh, Uttarakhand, Bihar, Jharkhand, Madhya Pradesh, Chhattisgarh, Assam, Rajasthan, Orissa and Jammu and Kashmir), whereas the remaining states are termed as High Performing States (HPS). Cash benefits to them are as under:"
        android:id="@+id/textView77"
        android:layout_below="@+id/textView76"
        android:layout_toStartOf="@+id/textView74"
        android:layout_alignEnd="@+id/button71"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rural Areas"
        android:id="@+id/textView78"
        android:layout_below="@+id/textView77"
        android:layout_alignParentStart="true"
        android:textColor="#fa0606" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView76"
        android:src="@drawable/jsy"
        android:layout_below="@+id/textView78"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Urban Areas"
        android:id="@+id/textView79"
        android:textColor="#fa0606"
        android:layout_below="@+id/imageView76"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView77"
        android:src="@drawable/jsyu"
        android:layout_below="@+id/textView79"
        android:layout_alignParentStart="true" />

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text=" home"
                android:id="@+id/button117"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#d3d3d3"
                android:onClick="jsyh" />

        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
