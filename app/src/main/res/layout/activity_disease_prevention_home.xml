<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ps1.bits_pilani.goa.aiims_kiosk.DiseasePreventionHome">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView30"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/diseasesAndPrevention"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anemia"
        android:id="@+id/button87"
        android:layout_below="@+id/imageView30"
        android:layout_alignEnd="@+id/imageView30"
        android:layout_alignParentStart="true"
        android:onClick="anemia"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Common Cold"
        android:id="@+id/button88"
        android:layout_below="@+id/button87"
        android:layout_alignEnd="@+id/imageView30"
        android:layout_alignParentStart="true"
        android:onClick="commonCold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIV"
        android:id="@+id/button89"
        android:layout_below="@+id/button88"
        android:layout_alignEnd="@+id/button90"
        android:layout_alignParentStart="true"
        android:onClick="hiv"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Typhoid"
        android:id="@+id/button90"
        android:layout_below="@+id/button89"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button91"
        android:onClick="typhoid"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malaria"
        android:id="@+id/button91"
        android:layout_below="@+id/button90"
        android:layout_alignEnd="@+id/imageView30"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:onClick="malaria"/>
</RelativeLayout>
