<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ps1.bits_pilani.goa.aiims_kiosk.DiseasePreventionHome">

    <include
        android:id="@+id/dap_tool_bar"
        layout="@layout/dap_tool_bar"
        ></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16sp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView30"
        android:src="@drawable/diseasesandprevention"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button90" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anemia"
        android:id="@+id/button87"
        android:onClick="anemia"
        android:layout_above="@+id/button72"
        android:layout_alignEnd="@+id/imageView30"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Common Cold"
        android:id="@+id/button88"
        android:onClick="commonCold"
        android:layout_below="@+id/button89"
        android:layout_alignEnd="@+id/button87"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIV"
        android:id="@+id/button89"
        android:onClick="hiv"
        android:layout_below="@+id/button91"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button88" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Typhoid"
        android:id="@+id/button90"
        android:onClick="typhoid"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/button91"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malaria"
        android:id="@+id/button91"
        android:onClick="malaria"
        android:layout_below="@+id/button90"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/button72"
        android:onClick="mainmenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</RelativeLayout>