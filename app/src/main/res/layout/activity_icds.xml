<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ps1.bits_pilani.goa.aiims_kiosk.Govt_Schemes.ICDS"
    android:background="#151515">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Key Features"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:id="@+id/keyfeatures"
                android:textColor="#fa0606"
                android:layout_alignBottom="@+id/imageView73"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ICDS_intro"
                android:id="@+id/ICDS_intro"
                android:layout_below="@+id/keyfeatures"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Beneficiaries and Services"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:id="@+id/textView55"
                android:layout_below="@+id/ICDS_intro"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30sp"
                android:textColor="#f90808" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1. Children below 6 months of age
 	       i. Immunization
 2. Children between 6 months to 3 years of age
	    i. Supplementary Nutrition
 	    ii. Immunization
 	    iii. Health Check-up
 	    iv. Referral Services
 3. Children between 3 to 6 years of age
 	    i. Supplementary Nutrition
 	    ii. Immunization
 	    iii. Health Check-up
 	    iv. Referral Services
 	    v. Non-formal pre-school education
 4. Expectant and nursing mothers
 	    i. Health Check-up
 	    ii. Immunization of expectant mothers against tetanus
 	    iii. Referral Services
 	    iv. Supplementary Nutrition
 	    v. Education on Nutrition and Health
 5. Other women 15 to 45 years
 	    i. Education on Nutrition and Health

 6. Adolescent girls between 11 to 18 years of age

 (Under Kishori Shakti Yojana)
	 i. Education on Nutrition and Health
	 ii. Supplementary Nutrition
 	 iii. Awareness generation on women and children rights"

                android:id="@+id/textView56"
                android:layout_below="@+id/textView55"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30sp"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView72"
                android:layout_alignBottom="@+id/keyfeatures"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="previous scheme"
                android:id="@+id/button3"
                android:background="#eb6003"
                android:textColor="#ffffff"
                android:onClick="icdsp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/button115" />

            <Button
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="next scheme"
                android:id="@+id/button6"
                android:background="#0954be"
                android:textColor="#ffffff"
                android:onClick="icdsn"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button115" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView73"
                android:src="@drawable/icds1"
                android:layout_below="@+id/button3"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="home"
                android:id="@+id/button115"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#f5d40c"
                android:onClick="icdsh" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
